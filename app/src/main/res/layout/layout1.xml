<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00D8D4D4"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="229dp"
        android:layout_height="61dp"
        android:layout_marginTop="17dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Microsoft Teams"
        android:textColor="#6370B6"
        android:textSize="28sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="245dp"
        android:layout_height="245dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="245dp"
            android:layout_height="245dp"
            android:scaleType="centerCrop"
            android:src="@drawable/team" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="323dp"
        android:layout_height="68dp"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Get started with your work, school or personal Microsoft account"
        android:textColor="#A9A9A9"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sign_in_rad"
        android:backgroundTint="#60CED1CC"
        android:gravity="center|center_horizontal"
        android:hint="Enter email, phone or Skype"
        android:inputType="textEmailAddress"
        android:textColor="#050505"
        android:textColorHint="#808080" />

    <Button
        android:id="@+id/button2"
        android:layout_width="275dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/sign_in_rad"
        android:backgroundTint="#6370B6"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="202dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Get help with signing in"
        android:textColor="#6370B6"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="351dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|center_vertical"

        android:text="Join a meeting"
        android:textAllCaps="false"
        android:textColor="#6370B6"
        android:background="@drawable/border_round"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="351dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_round"
        android:drawableLeft="@drawable/micro"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:paddingLeft="98dp"
        android:text="Sign up for free"
        android:textAllCaps="false"
        android:textColor="#6370B6"
        android:textSize="16sp" />
</LinearLayout>